---
const { lang, menuItems } = await Astro.props;

const prefix = lang == "en" ? "/en/" : "/";
---

<div class="menu-items-wrapper">
	<ul class="menu-items">
		{
			menuItems.map((item) => (
				<li class="">
					<a href={prefix + "#" + item.slug}>{item.name}</a>
				</li>
			))
		}
	</ul>
</div>

<style>
	.menu-items-wrapper {
		display: none;
	}

	@media (min-width: 768px) {
		.menu-items-wrapper {
			display: inline-block;
		}
	}

	.menu-items {
		display: flex;
		flex-direction: row;
	}

	.menu-items li {
		margin: 0 1em;
		white-space: nowrap;
		z-index: 1;
	}
</style>
