---
import HeaderLogo from "./HeaderLogo.astro";
import HeaderMenu from "./HeaderMenu.astro";

//TODO: might need to come back to this - currently all nav links send to a # link as opposed to actual path
const allMenuItems = {
	lt: [
		{
			name: "Psichoterapija",
			slug: "psichoterapija",
		},
		{
			name: "Samprata",
			slug: "samprata",
		},
		{
			name: "Konsultantai",
			slug: "konsultantai",
		},
	],
	en: [
		{
			name: "Psychotherapy",
			slug: "psychotherapy",
		},
		{
			name: "Model",
			slug: "model",
		},
		{
			name: "Consultants",
			slug: "consultants",
		},
	],
};

const url = new URL(Astro.request.url);
const lang = url.pathname.split("/")[1];

const menuItems = lang === "en" ? allMenuItems.en : allMenuItems.lt;

const languageOptions = {
	lt: {
		name: "Lietuvi≈°kai",
		slug: "lt",
	},
	en: {
		name: "English",
		slug: "en",
	},
};
---

<header>
	<nav>
		<HeaderLogo {languageOptions} />
		<HeaderMenu {lang} {menuItems} />
	</nav>
</header>

<style>
	header {
		width: 100%;
	}

	.lang {
		color: var(--red-8);
	}

	nav {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1em 1em 1em 1em;
	}

	@media (min-width: 768px) {
		nav {
			flex-direction: row;
			justify-content: space-between;
		}
	}
</style>
