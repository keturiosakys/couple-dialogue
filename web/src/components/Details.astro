---
const { lang } = Astro.props;
---

<div class="details">
	<p><img src="/couple-dialogue-logo-white.svg" alt="Couple Dialogue logo" /></p>
	<ul class="social-icons">
		<li>
			<a href="https://www.facebook.com/profile.php?id=100057480040003"
				><svg
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					role="img"
					>
					<title>Couple Dialogue Facebook</title>
					<path
						d="M17 2H14C12.6739 2 11.4021 2.52678 10.4645 3.46447C9.52678 4.40215 9 5.67392 9 7V10H6V14H9V22H13V14H16L17 10H13V7C13 6.73478 13.1054 6.48043 13.2929 6.29289C13.4804 6.10536 13.7348 6 14 6H17V2Z"
						stroke="currentColor"
						stroke-width="1.5"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</svg>
			</a>
		</li>
	</ul>
	<div>
		<p>Markučių g. 36-2</p>
		<p>Vilnius, LT-11347</p>
		<p>{lang === "en" ? "Lithuania" : "Lietuva"}</p>
	</div>
</div>

<style>
	.details > * {
		margin: 0.6em 0;
	}
	@media (min-width: 768px) {
		.details {
			grid-column: span 1;
		}
	}
	.social-icons {
		display: flex;
		flex-direction: row;
	}

	.social-icons > * {
		margin: 0 0.5em 0 0;
	}

	a {
		color: var(--color-background);
	}
</style>
