---
import MainLayout from "/src/layouts/MainLayout.astro";
// Component Imports
import MainHeader from "/src/components/Header/MainHeader.astro";
// Section imports
import MainHero from "@sections/MainHero.astro";
import MainModel from "@sections/MainModel.astro";
import MainServices from "@sections/MainServices.astro";
import MainConsultants from "@sections/MainConsultants.astro";
// Api and configs
import { client } from "/src/lib/sanityClient.js";
import { allConfigQuery } from "/src/lib/api.js";
const allSiteConfig = await client.fetch(allConfigQuery);

const url = new URL(Astro.request.url);
const lang = url.pathname.split("/")[1] === "en" ? "en" : "lt";

let title = allSiteConfig.seo.title;
let description = allSiteConfig.seo.description;
let permalink = "https://coupledialogue.com/";
---

<MainLayout
	lang={lang}
	title={title}
	description={description}
	permalink={permalink}
>
	<MainHeader />
	<MainHero />
	<MainModel />
	<MainServices />
	<MainConsultants />
</MainLayout>
