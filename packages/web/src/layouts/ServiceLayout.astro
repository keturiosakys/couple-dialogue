---
import BaseLayout from "@layouts/BaseLayout.astro";
import MainTalk from "@sections/MainTalk.astro";
import MainContact from "@sections/MainContact.astro";
// Components
import { PortableText } from "astro-portabletext";
import PricingTable from "@components/PricingTable.astro";
import MainHeader from "@components/Header/MainHeader.astro";

const { lang, title, description, permalink, content, kainos_prierasas, price } = Astro.props;
const { service } = Astro.params;
---

<BaseLayout {lang} {title} {description} {permalink}>
	<MainHeader />
	<main>
		<section>
			<h1>{title}</h1>
			<PortableText value={content} />
			<PortableText value={kainos_prierasas}/>
			<PricingTable lang={lang} price={price} />
		</section>
	</main>
	<MainTalk />
	<MainContact />
</BaseLayout>

<style>

	main {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		padding: 2em 0;
		max-width: 85%;
		margin: auto;
	}

	section {
		grid-column: span 3;
		align-items: center;
	}

	h3 {
		padding-bottom: 1em;
	}

	@media (min-width: 768px) {
		section {
			grid-column: span 2;
		}
	}

	section > * {
		padding-bottom: 1em;
	}

	ul li {
		list-style: disc;
	}

</style>
