{
	"compilerOptions": {
		"target": "ESNext",
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@lib/*": ["src/lib/*"],
			"@pages/*": ["src/pages/*"],
			"@sections/*": ["src/sections/*"],
			"@styles/*": ["src/styles/*"],
			"@utils/*": ["src/utils/*"]
		},
		"types": ["@astrojs/image/client"]
	}
}
